{
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["rust"],
  "coc.source.buffer.disableSyntaxes": ["comment", "string"],
  "codeLens.enable": true,
  "metals.statusBarEnabled": true,
  "diagnostic.checkCurrentLine": true,
  "coc.preferences.useQuickfixForLocations": false,
  "suggest.fixInsertedWord": false,
  "rust-analyzer.completion.addCallParenthesis": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.assist.importGranularity": "item",
  "rust-analyzer.cargo.loadOutDirsFromCheck": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.cargo.allFeatures": true,
  "languageserver": {
          "bash": {
                  "command": "bash-language-server",
                  "args": ["start"],
                  "filetypes": ["sh"],
                  "ignoredRootPaths": ["~"]
          }
  },
  "Lua.telemetry.enable": false,
        "list.insertMappings": {
                "<C-n>": "normal:j",
                "<C-p>": "normal:k",
                "<C-v>": "action:vsplit",
                "<A-a>": "do:selectall"
        },
        "list.normalMappings": {
                "<C-v>": "action:vsplit",
                "<A-a>": "do:selectall"
        }
}
